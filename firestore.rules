// ═══════════════════════════════════════════════════════════════════════════════
// WIJA - Firestore Security Rules (DEVELOPMENT VERSION)
// ═══════════════════════════════════════════════════════════════════════════════
// 
// ⚠️  IMPORTANT: This is a simplified version for development.
//     For production, use more restrictive rules!
//
// Deploy with: firebase deploy --only firestore:rules
// ═══════════════════════════════════════════════════════════════════════════════

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ═══════════════════════════════════════════════════════════════════════════
    // DEVELOPMENT MODE - Allow all authenticated users
    // ═══════════════════════════════════════════════════════════════════════════
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // User profiles
    match /users/{userId} {
      allow read, write: if isAuthenticated();
    }
    
    // Families - allow create/read for any authenticated user
    match /families/{familyId} {
      allow read, write: if isAuthenticated();
      
      // All subcollections - allow for authenticated users
      match /members/{memberId} {
        allow read, write: if isAuthenticated();
      }
      
      match /persons/{personId} {
        allow read, write: if isAuthenticated();
      }
      
      match /relationships/{relationshipId} {
        allow read, write: if isAuthenticated();
      }
      
      match /activities/{activityId} {
        allow read, write: if isAuthenticated();
      }
      
      match /exports/{exportId} {
        allow read, write: if isAuthenticated();
      }
    }
    
    // Invitations
    match /invitations/{invitationId} {
      allow read, write: if isAuthenticated();
    }
    
    // Exports (top level)
    match /exports/{exportId} {
      allow read, write: if isAuthenticated();
    }
    
    // Super Admins collection - read for auth check, write restricted
    match /superadmins/{userId} {
      allow read: if isAuthenticated();
      // Only existing super admins can add/remove super admins
      allow write: if isAuthenticated() && exists(/databases/$(database)/documents/superadmins/$(request.auth.uid));
    }
    
    // Collection Group rule for members - enables querying all memberships for a user
    // This is required for the home page to show all families where user is a member
    match /{path=**}/members/{memberId} {
      allow read: if isAuthenticated();
    }
  }
}
